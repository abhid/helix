<div class="mt-4 row">
  <div class="col-4">
    <div class="card">
      <div class="card-header bg-primary text-white">
        Active Directory Settings
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            Domain Controller IP / FQDN
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ad.server %></span>
          </div>
          <div class="col-6">
            Domain
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ad.domain %></span>
          </div>
          <div class="col-6">
            Base DN
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ad.base %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="card">
      <div class="card-header bg-primary text-white">
        Cisco ISE Settings
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            Policy Admin Node IP / FQDN
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ise.pan_ip %></span>
          </div>
          <div class="col-6">
            Monitoring Node IP / FQDN
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ise.mnt_ip %></span>
          </div>
          <div class="col-6">
            ISE ERS Username
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ise.ise_username %></span>
          </div>
          <div class="col-6">
            ISE ERS Password
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ise.ise_password %></span>
          </div>
          <div class="col-6">
            pxGrid Username
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ise.pxgrid_username %></span>
          </div>
          <div class="col-6">
            pxGrid Password
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.ise.pxgrid_password %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="card">
      <div class="card-header bg-primary text-white">
        Cisco Prime Settings
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            Prime IP / FQDN
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.prime.prime_ip %></span>
          </div>
          <div class="col-6">
            Prime Username
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.prime.prime_username %></span>
          </div>
          <div class="col-6">
            Prime Password
          </div>
          <div class="col-6">
            <span class="editable"><%= Rails.configuration.prime.prime_password %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
