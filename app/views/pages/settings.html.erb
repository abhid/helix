          </div>
          <div class="col-6">
            <span class="editable"><%= Setting["prime"]["username"] %></span>
          </div>
          <div class="col-6">
            Password
          </div>
          <div class="col-6">
            <span class="editable"><%= Setting["prime"]["password"].clear %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
