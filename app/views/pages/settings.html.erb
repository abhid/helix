<div class="mt-4 row">
  <div class="col-4">
    <div class="card">
      <div class="card-header bg-primary text-white">
        Active Directory Settings
        <div class="badge badge-dark badge-success float-right">
          Enabled
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            Domain Controller IP / FQDN
          </div>
          <div class="col-6">
            <span class="editable"><%= Setting["ad"]["server"] %></span>
          </div>
          <div class="col-6">
            Domain
          </div>
          <div class="col-6">
            <span class="editable"><%= Setting["ad"]["domain"] %></span>
          </div>
          <div class="col-6">
            Base DN
          </div>
          <div class="col-6">
            <span class="editable"><%= Setting["ad"]["base"] %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="card">
      <div class="card-header bg-primary text-white">
