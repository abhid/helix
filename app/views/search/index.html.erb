<!-- Template page that has table and search field -->
<div class="row mt-4">
  <div class="col-3">
    <%= form_with(url: search_path, method: :post, id: "session-search") do %>
    <div class="input-group">
      <%= text_field_tag :q, "", {placeholder: "Search active sessions by MAC/IP", autocomplete: "off", class: "form-control form-control-lg"} %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-outline-primary" %>
      </div>
      </div>
    <% end %>
  </div>
  <div class="col-6" id="session-results">
    <table class="table table-striped table-bordered table-sm">
      <thead class="thead-dark">
        <tr>
          <th>MAC Address</th>
          <th>IP Address</th>
          <th>Username</th>
          <th>Audit Session ID</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>
</div>
