<div class="mt-4 d-flex justify-content-end">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
<div class="col-6">
  <table class="table table-hover table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
      <tbody>
        <% @endpoint_groups.each do |ep_group| %>
          <tr>
            <td title="<%= ep_group.uuid %>">
              <%= link_to endpoint_group_path(ep_group.uuid) do %>
                <samp><%= ep_group.name %></samp>
              <% end %>
            </td>
            <td><span class="editable" data-update="<%= endpoint_group_path(ep_group) %>" data-param="description" data-id="<%= ep_group.id %>"><%= ep_group.description %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>
